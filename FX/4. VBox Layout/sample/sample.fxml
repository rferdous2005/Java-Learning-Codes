<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" spacing="40"
      style="-fx-border-color: blue; -fx-border-width: 5">

    <padding>
        <Insets bottom="20" right="20"/>
    </padding>

    <Label text="Welcome to Java FX!!" textFill="royalblue">
        <font>
            <Font name="Times New Roman bold" size="70"/>
        </font>
    </Label>
    <Label text="Do you wish to continue?" textFill="darkgreen">
        <font>
            <Font name="Times New Roman bold" size="40"/>
        </font>
    </Label>

    <HBox  alignment="BOTTOM_CENTER" spacing="30" prefHeight="150">
        <Button text="Okay" prefWidth="100"/>
        <Button text="Cancel" prefWidth="100"/>
        <Button text="Help" prefWidth="100"/>
    </HBox>

</VBox>